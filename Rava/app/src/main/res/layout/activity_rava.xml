<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.dam.examples.rava.RavaActivity"
    android:orientation="horizontal">
    <fragment android:name="com.dam.examples.rava.LetrasFragment"
        android:id="@+id/letras_fragment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        tools:layout="@layout/fragment_letras" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="fill_parent">
        <fragment android:name="com.dam.examples.rava.BotonesFragment"
            android:id="@+id/botones_fragment"
            android:layout_width="fill_parent"
            android:layout_weight="3"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_botones" />
        <fragment android:name="com.dam.examples.rava.PuntuacionFragment"
            android:id="@+id/puntuacion_fragment"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_puntuacion" />
    </LinearLayout>
</LinearLayout>
